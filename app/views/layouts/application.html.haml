<!DOCTYPE html>
%html
  %head
    %title 10 conseils pour...
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .navbar.navbar-inverse
      .navbar-inner
        %button.btn.btn-navbar
        = link_to '10 Conseils Pour...', root_path, class: "brand"
        .nav-collapse.collapse
          %ul.nav
            %li
              = link_to '__Home', root_path

          %ul.nav.pull-right
            - if current_user
              %li
                = link_to "__Sign out !", destroy_user_session_path, method: :delete
            - else
              %li
                = link_to "__Sign in !", new_user_registration_path
              %li
                = link_to "__Sign up !", new_user_session_path

          %p.navbar-text.pull-right
            - if current_user
              Hello
              = link_to current_user.email, user_path(current_user)

    .container
      = render 'layouts/messages'
      = yield
