%h1= @theme.title
%p.subtitle
  = @theme.description

%p
  = link_to new_theme_subject_path(@theme), class: "btn btn-success" do
    %i.fa.fa-plus
    Proposer un nouveau sujet

.subjects
  - @subjects.each do |subject|
    .subject.media{data:{url: subject_path(subject)}}
      = image_tag subject.illustration.url(:thumb), class: "pull-left"
      .media-body
        %h2.media-heading
          %small
            10 conseils pour
          = link_to subject do
            = subject.title
        %p= truncate(strip_tags(subject.description), length: 200, separator: ' ')