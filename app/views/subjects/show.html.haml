%h1
  10 conseils pour
  %span.highlight= @subject.title

.description
  %p
    = @subject.description

.row
  - @advices.each_with_index do |a, index|
    - if index == 0
      .col-md-12
        .advice.master
          .row
            .col-md-3
              .user
                = image_tag "avatar.png", class: "avatar"
                .body
                  .advice_from
                    Un conseil de
                  .author
                    = a.user.fullname
                  = link_to a.user.website, a.user.website
            .col-md-9
              %h2
                = a.title
              %p
                = a.description
            .footer
              = link_to_good_advice(current_user, a)
              = link_to_bad_advice(current_user, a)
    - else
      .col-md-4
        .advice
          .user
            = image_tag "avatar.png", class: "avatar"
            .body
              %h5
                Un conseil de
                = a.user.fullname
              = link_to a.user.website, a.user.website
          %h3.advice-header= a.title
          %p
            = a.description
          .footer
            = link_to_good_advice(current_user, a)
            = link_to_bad_advice(current_user, a)
.row
  .col-md-4
    = link_to new_subject_advice_path(@subject), class: "btn btn-block btn-success" do
      %i.fa.fa-plus
      Proposer un conseil

.clearfix
